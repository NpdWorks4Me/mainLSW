<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # If the request is for the root, serve dist/index.html
    RewriteRule ^$ dist/index.html [L]

    # If the request is not for a file or directory that exists in root
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    # And it hasn't already been rewritten to dist
    RewriteCond %{REQUEST_URI} !^/dist/
    # Rewrite to the dist folder
    RewriteRule ^(.*)$ dist/$1 [L]
</IfModule>
